<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minWidth="250.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cars.controller.PopupDeletePaneController">
   <children>
      <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" text="Czy na pewno chcesz usunąć wybrane auto?" textAlignment="CENTER" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <HBox>
         <children>
            <Button fx:id="confirmationButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="100.0" text="Tak" textAlignment="CENTER">
               <HBox.margin>
                  <Insets bottom="20.0" left="30.0" right="20.0" top="20.0" />
               </HBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button fx:id="cancelButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="100.0" text="Nie" textAlignment="CENTER">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="30.0" top="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
